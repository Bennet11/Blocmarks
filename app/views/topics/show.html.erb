<h1><%= @topic.title %></h1>

<div class="row">
  <div class="col-md-8">
    <h3><%= @topic.title %></h3>

    <h5>Comments</h5>
    <% @topic.comments.each do |comment| %>
      <%= user_avatar(comment.user.email) %>
      <p><%= comment.body %></p>
    <% end %>

    <%= link_to 'Add comment', new_topic_comment_path(@topic) %>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_path(@topic), class: 'btn btn-success' %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
  </div>
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <%#= link_to bookmark.title, topic_bookmark_path(@topic, bookmark) %>
      </div>
    </div>
  </div>
</div>
