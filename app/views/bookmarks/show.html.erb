<h1>Bookmarks</h1>


<div class="row">
  <div class="col-md-8">
    <p><%= @bookmark.url%></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_bookmark_path(@bookmark.url, @bookmark), class: 'btn btn-success' %>
    <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger', data: { confirm: 'Do you want to delete this bookmark?'} %>
  </div>
</div>
